<div class='container' id='register'>
  <div class='row'>
    <div class='col-md-12'>
      <h1><%= t('.edit-title') %></h1>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-12'>
      <%= render 'shared/flash' %>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class:'form-group') do |f| %>
    <%= devise_error_messages! %>
  <div class='row'>
    <div class='col-md-12'>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control form-field' %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t('.awaiting-confirmation')%> <%= resource.unconfirmed_email %></div>
      <% end %>
    </div>
  </div>
  <div class='row'>
    <div class="col-md-12">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-field', placeholder: t('.password-info') %>
    </div>
  </div>
  <div class='row'>
    <div class="col-md-12">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-field', placeholder: t('.confirm-password') %>
    </div>
  </div>
  <div class='row'>
    <div class="col-md-12">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control form-field', placeholder:t('.current-password') %>
    </div>
  </div>
  <div class='row'>
    <div class="col-md-12">
      <%= f.submit t('.submit'), class: 'btn btn-primary form-submit' %>
      <% end %>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-12'>
      <h2><%= t('.cancel-title')%></h2>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-12'>
      <%= button_to t('.cancel-title'), registration_path(resource_name), data: { confirm: t('.confirm-delete') }, method: :delete, class: 'btn btn-danger form-submit' %>
    </div>
  </div>
</div>
