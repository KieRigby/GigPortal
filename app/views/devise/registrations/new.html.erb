<div class='container' id='register'>
  <div class='row'>
    <div class='col-md-12'>
      <h1><%= t('.title') %></h1>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-12'>
      <%= render 'shared/flash' %>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:'form-group') do |f| %>
  <%= devise_error_messages! %>
  <div class='row'>
    <div class="col-md-12">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control form-field', placeholder: t('.enter-email') %>
    </div>
  </div>
  <div class='row'>
    <div class="col-md-12">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class:'form-control form-field', placeholder: t('.enter-password') %>
    </div>
  </div>
  <div class='row'>
    <div class="col-md-12">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control form-field', placeholder: t('.confirm-password') %>
    </div>
  </div>
  <div class='row'>
    <div class="col-md-12">
      <%= f.submit t('.submit'), class:'btn btn-primary form-submit' %>
    </div>
  </div>
  <div class='row'>
    <% end %>
  </div>
</div>
