<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Cabin:400,400i,700,700i|Pacifico" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-grid-only@1.0.0/bootstrap.min.css">
    <style type='text/css'>
      body{
        font-family:'Cabin'
      }
      .header{
        background-color:#40739e;
      }
      .logo{
        font-family:'Pacifico';
        color: #f5f6fa;
        text-shadow:-1px 1px rgba(0,0,0,0.6);
        text-align:center;
      }
      h1,h2{
        margin-bottom:5px;
        margin-top:10px;
      }
      p{
        margin-top:5px;
      }
      dl{
        margin-top:0px;
      }
      dt{
        font-weight:bold;
        margin-top:5px;
      }
      dd{
        padding:0px;
        margin:0px;
      }
      table {
        margin-top:20px;
        margin-bottom:20px;
        border-width: 0;
        border-style: none;
        border-color: #0000ff;
        border-collapse: collapse;
      }

      td {
        border-left: solid 10px #000;
        padding: 0;
        margin: 0;
        width: 0px;
        height: 10px;
      }

      td.black { border-color: #000; }
      td.white { border-color: #fff; }
      .event-description{
        margin-left:20px;
      }
      .event-image{
        width:100%;
      }
      .event-title{
        margin:0px;
        margin-left:20px;
      }
      .event-details{
        font-style:italic;
        color:#aaa;
        margin-left:20px;
      }
      hr{
        border: 1px solid #eee;
      }
      .footer{
        text-align:center;
        color:#aaa;
      }
      @media only screen and (max-width : 992px) {
        .event-description{
          margin-left:0px;
        }
        .event-title{
          margin-left:0px;
        }
        .event-details{
          margin-left:0px;
        }
      }
    </style>
  </head>
  <body>

    <div class='container-fluid header'>
      <div class='row'>
        <div class='col-md-12'>
          <p class='logo'><%= t('app-title') %></p>
        </div>
      </div>
    </div>

    <div class='container'>
      <div class='row'>
        <div class='col-md-12'>
          <h1><%= t('.heading-1') %><%= @event.title %> <%= t('.heading-2')%></h1>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-12'>
          <p><b><%= t('.greeting') %> <%= @first_name %></b>,<br> <%= t('.your-tickets-for') %><%= @event.title %><%= t('.information')%></p>
        </div>
      </div>
      <div class='row'>
        <h2><%= t('.event-details')%></h2>
      </div>
      <div class='row'>
        <div class='col-md-4'>
          <img src='https://placeimg.com/500/500/people' alt='<%= @event.title %>' class='event-image'>
        </div>
        <div class='col-md-8 event'>
          <h1 class='event-title'><%= @event.title %></h1>
          <span class='event-details'><%= @event.location %> - <%= @event.date.to_formatted_s(:short) %></span>
          <p class='event-description'><%= @event.long_description %></p>
        </div>
      </div>
      <div class='row'>
        <h2><%= t('.your-ticket')%></h2>
      </div>
      <div class='row'>
        <dl>
          <div class='col-md-3'>
            <dt><%= t('.name') %></dt>
            <dd><%= @first_name %> <%= @last_name %></dd>
          </div>
          <div class='col-md-3'>
            <dt><%= t('.email') %></dt>
            <dd><%= @email %></dd>
          </div>
          <div class='col-md-3'>
            <dt><%= t('.ticket-code') %></dt>
            <dd><%= @ticket_hash %></dd>
          </div>
          <div class='col-md-3'>
            <dt><%= t('.event') %></dt>
            <dd><%= @event.title %></dd>
          </div>
          </dl>
        </div>
        <div class='row'>
          <div class='col-md-12'>
            <%= raw @qr.as_html %>
          </div>
        </div>
      </div>

    <div class='container-fluid footer'>
      <div class='row'>
        <div class='col-md-12'>
          <hr />
          <p class='copyright'>&copy; <%= Time.now.year %>  <%= t('app-title') %></p>
        </div>
      </div>
    </div>

  </body>
</html>
