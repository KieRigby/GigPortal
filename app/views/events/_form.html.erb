<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div class='col-md-12' id="error_explanation">
      <div class='alert alert-danger animate wobble'>
        <h4><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h4>

        <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :short_description %>
    <%= f.text_field :short_description %>
  </div>

  <div class="field">
    <%= f.label :long_description %>
    <%= f.text_area :long_description %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :location_tbc %>
    <%= f.check_box :location_tbc %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.datetime_select :date %>
  </div>

  <div class="field">
    <%= f.label :date_tbc %>
    <%= f.check_box :date_tbc %>
  </div>

  <div class="field">
    <%= f.label :published %>
    <%= f.check_box :published %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
